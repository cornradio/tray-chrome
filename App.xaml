<Application x:Class="TrayChrome.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <!-- 托盘图标定义 -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="Resources/Ampeross-Ampola-Chrome.ico"
                        TrayLeftMouseUp="TrayIcon_TrayLeftMouseUp"
                        TrayMiddleMouseUp="TrayIcon_TrayMiddleMouseUp">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="极简模式" Name="SuperMinimalModeMenuItem" Click="SuperMinimalMode_Click" IsCheckable="True" />
                    <MenuItem Header="启用动画" Name="AnimationMenuItem" Click="Animation_Click" IsCheckable="True" IsChecked="True" />
                    <MenuItem Header="图标设置" Name="IconSettingsMenuItem">
                        <MenuItem Header="默认图标" Name="DefaultIconMenuItem" Click="SetIcon_Click" Tag="default" />
                        <MenuItem Header="钉钉" Name="DingDingIconMenuItem" Click="SetIcon_Click" Tag="dingding" />
                        <MenuItem Header="飞书" Name="FeishuIconMenuItem" Click="SetIcon_Click" Tag="feishu" />
                        <MenuItem Header="企业微信" Name="WecomIconMenuItem" Click="SetIcon_Click" Tag="wecom" />
                        <MenuItem Header="微信" Name="WeixinIconMenuItem" Click="SetIcon_Click" Tag="weixin" />
                    </MenuItem>
                    <MenuItem Header="收藏夹" Name="BookmarksMenuItem">
                        <MenuItem Header="添加到收藏夹" Click="AddBookmarkFromTray_Click"/>
                        <MenuItem Header="编辑收藏夹" Click="EditBookmarkFromTray_Click"/>
                        <Separator />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="创建桌面快捷方式" Click="CreateDesktopShortcut_Click" />
                    <MenuItem Header="GitHub" Click="OpenGithub_Click" />
                    <Separator />
                    <MenuItem Header="增加实例" Click="AddInstance_Click" />
                    <MenuItem Header="重启实例" Click="RestartInstance_Click" />
                    <Separator />
                    <MenuItem Header="关闭实例" Click="CloseInstance_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>