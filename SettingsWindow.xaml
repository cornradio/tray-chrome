<Window x:Class="TrayChrome.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="500">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 主内容区域 - 使用 TabControl 分类 -->
        <TabControl Grid.Row="0" Margin="0,0,0,10">
            <!-- 窗口设置 -->
            <TabItem Header="窗口设置">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="窗口大小">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="宽度:"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="WidthTextBox"/>
                                
                                <Label Grid.Row="0" Grid.Column="2" Content="高度:"/>
                                <TextBox Grid.Row="0" Grid.Column="3" Name="HeightTextBox"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" 
                                       Content="提示：修改后需要重启窗口才能生效" 
                                       Foreground="Gray" FontSize="10"/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Header="窗口行为">
                            <StackPanel>
                                <CheckBox Name="TopMostCheckBox" Content="窗口置顶"/>
                                <CheckBox Name="SuperMinimalModeCheckBox" Content="极简模式（隐藏工具栏）"/>
                                <CheckBox Name="AnimationCheckBox" Content="启用窗口动画"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 外观设置 -->
            <TabItem Header="外观设置">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="主题">
                            <StackPanel>
                                <CheckBox Name="DarkModeCheckBox" Content="暗色模式"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="图标设置">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <RadioButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="DefaultIconRadio" Content="默认图标" Tag="default" Margin="5"/>
                                <RadioButton Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="DingDingIconRadio" Content="钉钉" Tag="dingding" Margin="5"/>
                                <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="FeishuIconRadio" Content="飞书" Tag="feishu" Margin="5"/>
                                <RadioButton Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Name="WecomIconRadio" Content="企业微信" Tag="wecom" Margin="5"/>
                                <RadioButton Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Name="WeixinIconRadio" Content="微信" Tag="weixin" Margin="5"/>
                                <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Name="CustomIconButton" Content="选择自定义图标..." Margin="5" Click="CustomIconButton_Click"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 浏览器设置 -->
            <TabItem Header="浏览器设置">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="缩放">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="缩放比例:"/>
                                <Slider Grid.Column="1" Name="ZoomSlider" Minimum="0.3" Maximum="3.0" TickFrequency="0.1" 
                                        TickPlacement="BottomRight" Margin="5"/>
                                <Label Grid.Column="2" Name="ZoomValueLabel" MinWidth="50"/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Header="用户代理">
                            <StackPanel>
                                <RadioButton Name="MobileUARadio" Content="移动设备 (手机)" IsChecked="{Binding IsMobileUA}" Margin="5"/>
                                <RadioButton Name="DesktopUARadio" Content="桌面设备 (PC)" Margin="5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 广告拦截设置 -->
            <TabItem Header="广告拦截">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="启用">
                            <CheckBox Name="AdBlockEnabledCheckBox" Content="启用广告拦截"/>
                        </GroupBox>
                        
                        <GroupBox Header="拦截规则（每行一个，支持通配符 * 和域名匹配）">
                            <TextBox Name="AdBlockRulesTextBox" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" 
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas"
                                     MinHeight="150"/>
                        </GroupBox>
                        
                        <GroupBox Header="允许规则（白名单，优先级高于拦截规则）">
                            <TextBox Name="AdAllowRulesTextBox" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" 
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas"
                                     MinHeight="100"/>
                        </GroupBox>
                        
                        <Button Name="LoadDefaultRulesButton" Content="加载默认规则" Click="LoadDefaultRulesButton_Click" HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 快捷键设置 -->
            <TabItem Header="快捷键">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="全局快捷键">
                            <StackPanel>
                                <CheckBox Name="EnableHotKeyCheckBox" Content="启用全局快捷键"/>
                                
                                <Grid Margin="5,10,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="快捷键:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Name="HotKeyTextBox" 
                                             ToolTip="格式：alt + x 或 ctrl + shift + x"/>
                                </Grid>
                                
                                <Label Content="提示：快捷键用于显示/隐藏窗口" 
                                       Foreground="Gray" 
                                       FontSize="10" 
                                       Margin="5,5,5,0"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="快捷键帮助">
                            <StackPanel Margin="5">
                                <TextBlock TextWrapping="Wrap" Margin="5">
                                    <Run Text="以下是在 TrayChrome 中可用的快捷键：" FontWeight="Bold"/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="• 中键(托盘图标)：" FontWeight="Bold"/>
                                    <Run Text="关闭 TrayChrome 实例"/>
                                    <LineBreak/>
                                    <Run Text="• Ctrl + 中键(托盘图标)：" FontWeight="Bold"/>
                                    <Run Text="关闭当前实例"/>
                                    <LineBreak/>
                                    <Run Text="• Ctrl + L：" FontWeight="Bold"/>
                                    <Run Text="聚焦到地址栏"/>
                                    <LineBreak/>
                                    <Run Text="• Ctrl + R：" FontWeight="Bold"/>
                                    <Run Text="刷新当前页面"/>
                                    <LineBreak/>
                                    <Run Text="• Ctrl + Shift + O：" FontWeight="Bold"/>
                                    <Run Text="打开书签菜单"/>
                                    <LineBreak/>
                                    <Run Text="• Ctrl + Shift + B：" FontWeight="Bold"/>
                                    <Run Text="切换极简模式（Clean 模式）"/>
                                    <LineBreak/>
                                    <Run Text="• Ctrl + 点击链接：" FontWeight="Bold"/>
                                    <Run Text="在新窗口中打开链接"/>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="关于">
                            <StackPanel Margin="5">
                                <Button Name="GitHubButton" Content="打开 GitHub 页面" Click="GitHubButton_Click" HorizontalAlignment="Left" Margin="5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 收藏夹管理 -->
            <TabItem Header="收藏夹">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 工具栏 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Name="AddBookmarkButton" Content="添加收藏" Click="AddBookmarkButton_Click" Margin="0,0,5,0"/>
                        <Button Name="EditBookmarkButton" Content="编辑" Click="EditBookmarkButton_Click" Margin="0,0,5,0"/>
                        <Button Name="DeleteBookmarkButton" Content="删除" Click="DeleteBookmarkButton_Click" Margin="0,0,5,0"/>
                        <Button Name="RefreshBookmarkButton" Content="刷新" Click="RefreshBookmarkButton_Click"/>
                    </StackPanel>
                    
                    <!-- 收藏夹列表 -->
                    <ListBox Grid.Row="1" Name="BookmarkListBox" SelectionMode="Single" 
                             MouseDoubleClick="BookmarkListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Url}" Foreground="Gray" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- 状态栏 -->
                    <TextBlock Grid.Row="2" Name="BookmarkStatusText" Margin="0,5,0,0" Foreground="Gray" FontSize="10"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="10,10,10,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="OkButton" Content="保存并关闭" Click="OkButton_Click" IsDefault="True" MinWidth="120"/>
                <Button Name="CancelButton" Content="关闭" Click="CancelButton_Click" IsCancel="True" MinWidth="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

